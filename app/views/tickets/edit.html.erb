<div class="container mt-5">
  <h1>Edit Ticket</h1>
  <%= form_with model: @ticket, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control", rows: 5 %>
    </div>
    <div class="form-group">
      <%= form.label :status %>
      <%= form.text_field :status, class: "form-control" %>
    </div>
    <%= form.submit "Update Ticket", class: "btn btn-success btn-outline btn-lg" %>
  <% end %>
</div>
