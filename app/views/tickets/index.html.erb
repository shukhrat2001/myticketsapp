<div class="container mt-5">
  <h1>Tickets</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.title %></td>
          <td><%= ticket.description %></td>
          <td><%= ticket.status %></td>
          <td>
            <%= link_to "Show", ticket, class: "btn btn-primary btn-sm" %>
            <%= link_to "Edit", edit_ticket_path(ticket), class: "btn btn-warning btn-sm" %>
            <%= link_to 'Delete', ticket_path(ticket), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New Ticket", new_ticket_path, class: "btn btn-primary mt-3" %>
</div>
